{
    "name" : "webservco/hello-world",
    "type" : "project",
    "description" : "Sample App for the WebServCo PHP Framework",
    "keywords" : [
        "framework",
        "webservco",
        "demo"
    ],
    "homepage" : "https://webserv.co",
    "license" : "MIT",
    "authors" : [
        {
            "name" : "Radu Maier",
            "email" : "ariademur@webserv.co"
        }
    ],
    "repositories" : [
        {
            "type" : "path",
            "url" : "~/projects/local/webservco/framework",
            "options" : {
                "symlink" : true
            }
        }
    ],
    "require" : {
        "php" : "^5.4 || ^7.0",
        "webservco/framework" : "~9"
    },
    "require-dev" : {
        "phpunit/phpunit" : "~4|~5",
        "webservco/framework" : "@dev"
    },
    "suggest" : {
        "pds/skeleton" : "A standard filesystem skeleton suitable for all PHP packages.",
        "squizlabs/php_codesniffer" : "Detects violations of a defined set of coding standards.",
        "phpstan/phpstan" : "PHP Static Analysis Tool, when using PHP 7.x"
    },
    "autoload" : {
        "psr-4" : {
            "Project\\" : "src/"
        }
    },
    "minimum-stability" : "stable",
    "scripts" : {
        "test" : "vendor/bin/phpunit --colors=always",
        "test:d" : "vendor/bin/phpunit --testdox",
        "check:structure" : "pds-skeleton validate .",
        "check" : "phpcs --standard=PSR2 --extensions=php src public config",
        "s:0": "phpstan analyse src --level=0 --ansi",
        "s:1": "phpstan analyse src --level=1 --ansi",
        "s:2": "phpstan analyse src --level=2 --ansi",
        "s:3": "phpstan analyse src --level=3 --ansi",
        "s:4": "phpstan analyse src --level=4 --ansi",
        "s:5": "phpstan analyse src --level=5 --ansi",
        "s:6": "phpstan analyse src --level=6 --ansi",
        "s:7": "phpstan analyse src --level=7 --ansi"
    }
}
